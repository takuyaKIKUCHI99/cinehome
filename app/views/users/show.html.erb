<div class="container">
  <div class="card-product mt-5">
    <div class="card-product-pic">
      <%= cl_image_tag @user.photo, height:150, width:150, crop: :fill, gravity: :face, radius: :max, alt: "avatar" %>
    </div>
    <div class="card-product-infos ml-3">
      <h2 class=""><%= @user.name %></h2>
      <p><i class="far fa-envelope"></i> <%= @user.email %></p>
      <p><%= render '/users/user-rating' %></p>
      <div class="description border-top my-3">
        <p class="font-italic p-2">"<%= @user.description %>"</p>
      </div>
    </div>
  </div>

  <div id="comingup_event" class="mt-3">
    <h5>Comming-up events</h5>
    <div class="cards">
      <% @user.events.each do |event|%>
        <% if Time.parse("#{event.booking_time}") > Time.now %>
          <%= link_to event_path(event), class: 'text-decoration-none text-body' do %>
            <div class="card-movie">
              <img src="<%= event.movie.photo %>" />
              <div class="card-movie-infos">
                <div>
                  <h2><%= event.movie.name %></h2>
                  <p><i class="far fa-clock mr-2"></i> <%= event.booking_time.strftime("%b %-d %Y, %H:%M") %></p>
                  <p><i class="fas fa-map-marker-alt mr-2"></i><%= event.address %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div id="past_event" class="mt-3">
    <h5>Past events</h5>
    <div class="cards">
      <% @user.events.each do |event|%>
        <% if Time.parse("#{event.booking_time}") < Time.now %>
          <%= link_to event_path(event), class: 'text-decoration-none text-body' do %>
            <div class="card-movie">
              <img src="<%= event.movie.photo %>" />
              <div class="card-movie-infos">
                <div>
                  <h2><%= event.movie.name %></h2>
                  <p><i class="far fa-clock mr-2"></i> <%= event.booking_time.strftime("%b %-d %Y, %H:%M") %></p>
                  <p><i class="fas fa-map-marker-alt mr-2"></i><%= event.address %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

</div>

