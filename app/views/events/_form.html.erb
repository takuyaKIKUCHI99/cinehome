<%= simple_form_for [@event] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :booking_time, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :capacity, collection: 1..20 %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.association :movie %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
