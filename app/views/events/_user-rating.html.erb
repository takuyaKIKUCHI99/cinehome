<% reviews = Review.all.where(event_id: Event.all.where(user_id: @event.user.id).ids) %>
<% counter = 0 %>
<% sum = 0 %>
<% reviews.each do |review| %>
<% sum += review[:rating] %>
<% counter += 1 %>
<% end %>

<% rate = (sum/counter.to_i) %>
<% star_counter = 0 %>
<% 5.times do %>
  <i class="<%= rate > star_counter ? 'fa fa-star' : 'far fa-star' %>" style="color:#ffda1f;"></i>
  <% star_counter += 1 %>
<% end %>
