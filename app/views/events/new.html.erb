<div class="container">
<h1 class="text-center">Create a new event</h1>

<%= simple_form_for [@event] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :booking_time, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :max, numericality: { greater_than: 1 } %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.association :movie %>
  <%= f.submit "Add Event", class: "btn btn-primary" %>
<% end %>
</div>
